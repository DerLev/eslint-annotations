{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "module": "ES2020"
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
